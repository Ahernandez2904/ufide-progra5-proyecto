@model ReservacionViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Editando Reservación";
}

<br />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Reservacion.Id" />

    <div class="container table-info">
        <div class="row justify-content-center text-center">
            <div style="margin:10px; border:groove; color:lightgoldenrodyellow" class="col-6 bg-primary fw-bold">
                <h2>
                    Editando Reservación
                </h2>
            </div>
        </div>

        <div class="row form-group justify-content-center">
            <div style="padding-bottom:10px; padding-top:20px; color:lightgoldenrodyellow" class="col-md-2 bg-primary fw-bold text-center">
                <label asp-for="Reservacion.CantidadAsientos"></label>
            </div>
            <div style="padding-bottom:10px; padding-top:20px" class="col-4 bg-primary fw-bold text-center">
                <input type="text" class="form-control" asp-for="Reservacion.CantidadAsientos" />
                <span asp-validation-for="Reservacion.CantidadAsientos" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group justify-content-center">
            <div style="padding-bottom: 10px; padding-top: 20px; color: lightgoldenrodyellow" class="col-md-2 bg-primary fw-bold text-center">
                <label asp-for="Reservacion.Fecha"></label>
            </div>
            <div style="padding-bottom:10px; padding-top:20px" class="col-4 bg-primary fw-bold text-center">
                <input type="date" class="form-control" asp-for="Reservacion.Fecha" />
                <span asp-validation-for="Reservacion.Fecha" class="text-danger"></span>
            </div>
        </div>

        <div class="row form-group justify-content-center">
            <div style="padding-bottom: 10px; padding-top: 20px; color: lightgoldenrodyellow" class="col-md-2 bg-primary fw-bold text-center">
                <label asp-for="Reservacion.CedulaCliente"></label>
            </div>
            <div style="padding-bottom:10px; padding-top:20px" class="col-4 bg-primary fw-bold text-center">
                @Html.DropDownListFor(s => s.Reservacion.CedulaCliente, Model.Cliente, "- Seleccione un cliente", new { @class = "form-control" })
                <span asp-validation-for="Reservacion.CedulaCliente" class="text-danger"></span>
            </div>
        </div>

        <div class="row justify-content-center">
            <div style="padding-bottom:20px; padding-top:10px" class="col-6 bg-primary fw-bold text-center">
                <button asp-controller="Reservaciones" asp-action="Index" asp-route-id="0" class="btn btn-danger">Cancelar</button>

                <button type="submit" class="btn btn-warning text-white">
                    <span>Actualizar</span>
                </button>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}