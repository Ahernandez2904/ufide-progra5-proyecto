@model FacturaViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Editando Factura";
} 

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>



    @if (Model.Factura.IdFactura > 0)
    {
        <input type="hidden" asp-for="Factura.IdFactura" />
    }


<div class="container table-info">
    <div class="row justify-content-center text-center" style="color:lightgoldenrodyellow">
        <div style="margin:10px; border:groove" class="col-6 bg-primary fw-bold">
            <h2>
                @if (Model.Factura.IdFactura > 0)
                {<span>Editando</span> }
                else
                { <span>Creando</span>} Factura
            </h2>
        </div>
    </div>


    <div class="row form-group justify-content-center">
        <div style="padding-bottom: 15px; padding-top: 20px; color: lightgoldenrodyellow" class="col-md-2 bg-primary fw-bold text-center"><label asp-for="Factura.IdReservacion"></label></div>
        <div style="padding-bottom: 15px; padding-top: 20px; color: lightgoldenrodyellow" class="col-4 bg-primary fw-bold text-center">
            @Html.DropDownListFor(s => s.Factura.IdReservacion, Model.Reservaciones, "- Seleccione la reservación...", new { @class = "form-control" })
            <span asp-validation-for="Factura.IdReservacion" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group justify-content-center">
        <div style="padding-bottom: 15px; padding-top: 20px; color: lightgoldenrodyellow" class="col-md-2 bg-primary fw-bold text-center"><label asp-for="Factura.CedulaEmpleado"></label></div>
        <div style="padding-bottom: 15px; padding-top: 20px; color: lightgoldenrodyellow" class="col-4 bg-primary fw-bold text-center">
            @Html.DropDownListFor(s => s.Factura.CedulaEmpleado, Model.Empleados, "- Seleccione la cedula del empleado...", new { @class = "form-control" })
            <span asp-validation-for="Factura.CedulaEmpleado" class="text-danger"></span>
        </div>
    </div>

    <div class="row justify-content-center">
        <div style="padding-bottom:20px; padding-top:20px" class="col-6 bg-primary fw-bold text-center text-center">
            <button asp-controller="Factura" asp-action="Index" class="btn btn-danger text-white">Cancelar</button>
            <button type="submit" class="btn btn-warning text-white">
                @if (Model.Factura.IdFactura > 0)
                {<span>Actualizar</span> }
                else
                { <span>Crear</span>}
            </button>
        </div>
    </div>
</div>
</form>

<br />
<br />
<br />
<br />

<div style=" font-size:25px; align-content:center; margin:15%" class="d-flex justify-content-around text-wrap d-flex align-items-center ">
    <a href="~/Factura">Volver al Menu de Reservacion</a>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}