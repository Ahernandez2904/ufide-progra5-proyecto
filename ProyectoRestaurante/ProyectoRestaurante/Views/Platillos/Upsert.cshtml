@model Platillo
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Editando Platillo";
}

<br />
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="container table-info">
        <div class="row justify-content-center">
            <div style="margin:10px; border:groove; color:lightgoldenrodyellow" class="col-6 bg-primary fw-bold">
                <h2>
                    Editando Platillo
                </h2>
            </div>
        </div>

        <div class="row form-group justify-content-center">
            <div style="padding-bottom: 20px; padding-top: 20px; color: lightgoldenrodyellow" class="col-md-2 bg-primary fw-bold text-center">
                <label asp-for="Nombre"></label>
            </div>
            <div style="padding-bottom:20px; padding-top:20px" class="col-4 bg-primary fw-bold text-center">
                <input type="text" class="form-control" asp-for="Nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group justify-content-center">
            <div style="padding-bottom: 20px; padding-top: 20px; color: lightgoldenrodyellow" class="col-md-2 bg-primary fw-bold text-center">
                <label asp-for="Descripcion"></label>
            </div>
            <div style="padding-bottom:20px; padding-top:20px" class="col-4 bg-primary fw-bold text-center">
                <input type="text" class="form-control" asp-for="Descripcion" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group justify-content-center">
            <div style="padding-bottom: 20px; padding-top: 20px; color: lightgoldenrodyellow" class="col-md-2 bg-primary fw-bold text-center">
                <label asp-for="Costo"></label>
            </div>
            <div style="padding-bottom:20px; padding-top:20px" class="col-4 bg-primary fw-bold text-center">
                <input type="text" class="form-control" asp-for="Costo" />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
        </div>

        <div  class="row justify-content-center" >
            <div style="padding-bottom:20px; padding-top:20px" class="col-md-6 bg-primary fw-bold text-center ">
                <button asp-controller="Platillos" asp-action="Index" asp-route-id="0" class="btn btn-danger">Cancelar</button>

                <button type="submit" class="btn btn-warning text-white">
                    <span>Actualizar</span>
                </button>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}